---
import WorkExperience from "../components/WorkExperience.astro";
import { Content as Summary } from "../content/misc/summary.mdx";
import { Content as Sidebar } from "../content/misc/sidebar.mdx";
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
import SideProjects from "../components/SideProjects.astro";
import Volunteering from "../components/Volunteering.astro";

const FULL_NAME = "Rahmat Junaid";
const LOCATION = "Amsterdam, The Netherlands";
const EMAIL_ADDRESS = "ezhang42@example.com";
const LINKED_IN_SLUG = "ezhang42";
const GITHUB_USERNAME = "ezhang42";
---

<Layout title={`CV - ${FULL_NAME}`}>
  <div
    class="mx-auto bg-white p-6 shadow md:container print:m-0 print:p-0 print:shadow-none md:my-12 md:p-14 lg:px-20 lg:py-20"
  >
    <div class="flex flex-wrap gap-12 justify-self-stretch print:gap-16 print:justify-self-auto lg:justify-self-auto">
      <main class="flex-1 flex flex-col gap-6">
        <header class="mb-2">
          <h1 class="font-serif text-6xl leading-tight mb-2 text-indigo-500">{FULL_NAME}</h1>
          <h2>Senior Software Engineer</h2>

          <div class="text-lg font-medium">
            <Summary />
          </div>
        </header>

        <section>
          <h2>Work Experience</h2>
          <WorkExperience />
        </section>

        <section>
          <h2>Side Projects</h2>
          <SideProjects />
        </section>

        <section>
          <h2>Volunteering</h2>
          <Volunteering />
        </section>
      </main>
      <aside class="w-full text-sm leading-relaxed print:order-first print:w-56 md:order-first md:w-52 lg:w-56">
        <section class="mb-6">
          <img src="/avatar.png" alt={`Profile picture of ${FULL_NAME}`} class="w-48 rounded-full bg-indigo-200" />
        </section>

        <section class="font-medium text-gray-600">
          <div class="mb-2 flex items-center">
            <Icon name="mdi:map-marker" class="prefix-icon !text-red-600" />
            {LOCATION}
          </div>
          <ul class="icon-list">
            <li>
              <Icon name="mdi:at" class="prefix-icon" />
              <a href=`mailto:${EMAIL_ADDRESS}`>{EMAIL_ADDRESS}</a>
            </li>
            <li>
              <Icon name="mdi:linkedin" class="prefix-icon" />
              <a href=`https://linkedin.com/in/${LINKED_IN_SLUG}` target="_blank">linkedin.com/in/{LINKED_IN_SLUG}</a>
            </li>
            <li>
              <Icon name="mdi:github" class="prefix-icon" />
              <a href=`https://github.com/${GITHUB_USERNAME}` target="_blank">github.com/{GITHUB_USERNAME}</a>
            </li>
          </ul>
        </section>

        <section class="prose-h3:mt-8">
          <Sidebar />
        </section>
      </aside>
    </div>
  </div>
</Layout>

<style>
  aside section {
    @apply break-inside-avoid-page;
  }

  .prefix-icon {
    @apply mr-2 block h-4 w-4 flex-shrink-0 text-gray-400;
  }

  .icon-list li {
    @apply flex items-center;
  }
</style>
